<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bluesnap.android.demoapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <!-- this is for the demo app crash reports, not the SDK -->
    <uses-permission android:name="android.permission.READ_LOGS" />
    <!-- Wake lok and keyguard for UI tests , not the SDK -->
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:name=".MainApplication"
        android:icon="@drawable/shopper_icon"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light">
        <activity
            android:name=".DemoMainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PostPaymentActivity"
            android:label="@string/title_activity_post_payment"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>
